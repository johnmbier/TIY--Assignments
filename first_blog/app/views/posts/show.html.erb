<h1><%= @post.title %></h1>
 <body>
 	<p><%= @post.content%></p>
 	By: <%= @post.author%> / 
<%= link_to 'Edit this post', edit_post_path(@post) %> / 
<%= link_to 'Back to posts', posts_path %> / <%= link_to 'Add a Comment', new_comment_path %>

<p><%= @post.comments.each do |c| %>
   <div style="width:96%;background-color:#F3FBFC;border:1px solid 033E81;padding:5px;">
   	
     <q><%= c.content%><%#= truncate(c.content, :length => 100)%></q><br>
      - Author: <cite><%= c.author%></cite>
   </div>
  </p> 
  

 <br />
  <%end%>
   
 </body>
  
